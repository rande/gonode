{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build/dist",
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es7",
            "dom"
        ],
        "types": [
            "node"
        ],
        "paths": {
            "*": [
                "*",
                "./src/fugue/packages/*"
            ],
        },
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "jsxFactory": "h",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "strict": true,
        "traceResolution": true
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "**/*.test.tsx",
        "**/*.test.ts"
    ]
}